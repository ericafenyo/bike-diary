<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
        name="achievement"
        type="com.ericafenyo.bikediary.model.Achievement" />

    <variable
        name="model"
        type="com.ericafenyo.bikediary.ui.dashboard.DashboardViewModel" />

    <import type="com.ericafenyo.bikediary.ui.dashboard.DashboardViewModel.Action" />
  </data>

  <androidx.core.widget.NestedScrollView
      android:id="@+id/dashboard_nested_scroll_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_layout_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <include
          android:id="@+id/appbar"
          layout="@layout/toolbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          bind:isLoading="@{false}"
          bind:title="@{@string/title_dashboard}" />

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card_level"
          style="@style/Widget.Application.CardView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/space_small"
          app:shapeAppearanceOverlay="@style/ShapeAppearance.Application.SmallComponent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> model.dispatchAction(Action.LAUNCH_ACHIEVEMENTS)}"
            android:padding="@dimen/space_normal">

          <androidx.appcompat.widget.AppCompatImageView
              android:id="@+id/image_badge"
              android:layout_width="52dp"
              android:layout_height="52dp"
              android:src="@{achievement.badge.icon}"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:src="@tools:sample/avatars" />

          <TextView
              android:id="@+id/text_next_badge_level"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginBottom="16dp"
              android:fontFamily="sans-serif-medium"
              android:text="@{@string/format_level(2)}"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
              app:layout_constraintBottom_toTopOf="@+id/progress_bar_kilometers"
              app:layout_constraintStart_toEndOf="@+id/image_badge"
              tools:text="Level 2" />

          <TextView
              android:id="@+id/text_kilometers_remaining_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/space_extra_small"
              android:fontFamily="sans-serif-medium"
              android:text="@{achievement.remainingDistance}"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
              app:layout_constraintBaseline_toBaselineOf="@+id/text_next_badge_level"
              app:layout_constraintEnd_toStartOf="@+id/text_kilometers_remaining"
              tools:text="53.6" />

          <TextView
              android:id="@+id/text_kilometers_remaining"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/kilometers_remaining"
              app:layout_constraintBaseline_toBaselineOf="@+id/text_kilometers_remaining_value"
              app:layout_constraintEnd_toEndOf="parent"
              tools:text="53.6 Km left" />

          <com.google.android.material.progressindicator.LinearProgressIndicator
              android:id="@+id/progress_bar_kilometers"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/space_normal"
              android:progress="@{achievement.progressPercent}"
              app:layout_constraintBottom_toBottomOf="@+id/image_badge"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@+id/image_badge"
              app:trackCornerRadius="@dimen/space_small"
              app:trackThickness="6dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          style="@style/Widget.Application.CardView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/space_small"
          android:layout_marginBottom="@dimen/space_small"
          app:shapeAppearance="@style/ShapeAppearance.HabitDiary.MediumComponent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_normal">

          <TextView
              android:id="@+id/text_calories_progress2"
              android:layout_width="46dp"
              android:layout_height="21dp"
              android:text="458/1000"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              bind:layout_constraintStart_toStartOf="@+id/text_calories_label"
              bind:layout_constraintTop_toBottomOf="@+id/text_calories_label" />

          <TextView
              android:id="@+id/text_calories_label2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Distance"
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              app:layout_constraintStart_toEndOf="@+id/linear_progress_distance"
              app:layout_constraintTop_toTopOf="@+id/linear_progress_distance" />

          <include
              android:id="@+id/card_title_daily_goals"
              layout="@layout/view_card_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              bind:text='@{"Daily goal"}' />

          <com.google.android.material.progressindicator.CircularProgressIndicator
              android:id="@+id/linear_progress_kilometers"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/space_medium"
              android:progress="76"
              app:indicatorColor="@color/color_orange"
              app:indicatorSize="48dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/card_title_daily_goals"
              app:trackColor="?android:colorBackground"
              app:trackCornerRadius="4dp"
              app:trackThickness="6dp" />

          <TextView
              android:id="@+id/text_calories_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="24dp"
              android:text="Calories"
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              app:layout_constraintBottom_toTopOf="@+id/text_calories_progress"
              app:layout_constraintStart_toEndOf="@+id/linear_progress_kilometers"
              app:layout_constraintTop_toTopOf="@+id/linear_progress_kilometers" />

          <TextView
              android:id="@+id/text_calories_progress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="458/1000"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"

              app:layout_constraintStart_toEndOf="@+id/linear_progress_distance"
              app:layout_constraintTop_toBottomOf="@+id/text_calories_label2" />

          <TextView
              android:id="@+id/text_calories_progress_percent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="48%"
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              app:layout_constraintBaseline_toBaselineOf="@+id/text_calories_label"
              app:layout_constraintEnd_toEndOf="parent" />

          <View
              android:id="@+id/divider_calories_distance"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="16dp"
              android:background="@color/divider"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/linear_progress_kilometers" />

          <com.google.android.material.progressindicator.CircularProgressIndicator
              android:id="@+id/linear_progress_distance"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:layout_marginTop="16dp"
              android:progress="87"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/divider_calories_distance"
              app:trackColor="?android:colorBackground"
              app:trackCornerRadius="4dp"
              app:trackThickness="6dp" />


          <com.google.android.material.progressindicator.LinearProgressIndicator
              android:id="@+id/linear_progress_calories"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/space_medium"
              android:progress="36"
              app:layout_constraintTop_toBottomOf="@id/linear_progress_distance"
              app:trackColor="?android:colorBackground"
              app:trackCornerRadius="4dp"
              app:trackThickness="12dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/space_small"
          android:layout_marginBottom="@dimen/space_small"
          app:shapeAppearance="@style/ShapeAppearance.HabitDiary.MediumComponent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_normal">

          <com.github.mikephil.charting.charts.BarChart
              android:id="@+id/chart_adventures"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              app:layout_constraintDimensionRatio="3:2"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/space_small"
          android:layout_marginBottom="@dimen/space_small"
          app:shapeAppearance="@style/ShapeAppearance.HabitDiary.MediumComponent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_normal">

          <com.github.mikephil.charting.charts.LineChart
              android:id="@+id/chart_weight"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              app:layout_constraintDimensionRatio="3:2"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/space_small"
          android:layout_marginBottom="@dimen/space_small"
          app:shapeAppearance="@style/ShapeAppearance.HabitDiary.MediumComponent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <TextView
              android:id="@+id/text_bmi_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="BMI(Kg/m2)" />

        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.core.widget.NestedScrollView>
</layout>
