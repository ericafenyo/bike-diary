<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
        name="trip"
        type="com.ericafenyo.habitdiary.model.Trip" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_backdrop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/color_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@{trip.title}"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toEndOf="@+id/image_backdrop"
        app:layout_constraintTop_toTopOf="@+id/image_backdrop"
        tools:text="Nantes to Pornichet" />

    <TextView
        android:id="@+id/text_metrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{@string/format_trip_metrics(trip.distance, trip.duration)}"
        app:layout_constraintBottom_toBottomOf="@+id/image_backdrop"
        app:layout_constraintStart_toStartOf="@+id/text_title" />

    <TextView
        android:id="@+id/text_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_2"
        android:text="@{@string/format_trip_calories(trip.calories)}"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_metrics"
        app:layout_constraintEnd_toEndOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
