<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
        name="model"
        type="com.ericafenyo.bikediary.ui.profile.ProfileViewModel" />
  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context=".ProfileFragment">

    <include
        android:id="@+id/appbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:isLoading="@{false}"
        bind:title="@{@string/title_profile}" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_appearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.HabitDiary.MediumComponent">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/colorSurface">

            <com.google.android.material.switchmaterial.SwitchMaterial
                style="@style/Widget.HabitDiary.Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="@{model.isDarkTheme}"
                android:drawableStart="@drawable/brightness_medium_24px"
                android:drawablePadding="@dimen/space_normal"
                android:fontFamily="sans-serif-medium"
                android:onCheckedChanged="@{(_, checked) -> model.onEnableDarkThemeEvent(checked)}"
                android:text="@string/profile_label_dark_mode"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

          </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
  </LinearLayout>
</layout>
